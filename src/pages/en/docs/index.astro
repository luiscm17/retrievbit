---
import CollectionLayout from "@components/docs/CollectionLayout.astro";
import { getIndex, getGroups } from "@lib/contentParser";
import type { DocsEntry } from "@/types";
import { sortByTitle } from "@lib/sortFunctions";

// Obtener el idioma de la URL basado en la estructura de carpetas
const lang = Astro.url.pathname.split('/')[1] || "en";

const collectionIndex = (await getIndex("docs", lang)) as DocsEntry;
const groupIndices = (await getGroups("docs", lang, sortByTitle)) as DocsEntry[];
---

<CollectionLayout entries={groupIndices} collectionIndex={collectionIndex} />
