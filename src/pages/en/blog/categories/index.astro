---
import TaxaLayout from "@components/blog/TaxaLayout.astro";
import { getTaxa, getTaxaMultiset } from "@lib/taxonomyParser";

const lang = Astro.url.pathname.split('/')[1] || "en";
const collection = "blog";
const taxonomy = "categories";
const taxa = await getTaxa(collection, taxonomy, lang);
const allTaxa = await getTaxaMultiset(collection, taxonomy, lang);
---

<TaxaLayout taxonomy={taxonomy} taxa={taxa} allTaxa={allTaxa} />
