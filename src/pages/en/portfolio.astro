---
import type { PortfolioEntry } from "@/types";
import EntryLayout from "@components/portfolio/EntryLayout.astro";
import { getIndex } from "@lib/contentParser";

const lang = Astro.url.pathname.split('/')[1] || "en";

const entry = (await getIndex("portfolio", lang)) as PortfolioEntry;
---

<EntryLayout entry={entry} />
