---
import { getRelativeLocaleUrl } from 'astro:i18n';

// Obtener el idioma por defecto de la configuración
const defaultLocale = 'en';

// Redirigir usando getRelativeLocaleUrl que respeta la configuración de i18n
const url = getRelativeLocaleUrl(defaultLocale, '/');
return Astro.redirect(url);
