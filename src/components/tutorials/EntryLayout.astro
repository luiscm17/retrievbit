---
import type { TutorialsEntry } from "@/types";
import Share from "@components/common/Share.astro";
import { Image } from "astro:assets";
import BaseLayout from "@components/base/BaseLayout.astro";
import { upperHumanize, markdownify, slugify } from "@lib/textConverter";

import { FaRegUserCircle, FaTools, FaTags } from "react-icons/fa";
import { GiOilRig } from "react-icons/gi";

interface Props {
  entry: TutorialsEntry;
}

const { entry } = Astro.props;
const {
  title,
  author,
  description,
  image,
  imageAlt,
  topics,
  tools,
  tags,
  context,
  development,
  application,
  summary,
  resources,
} = entry.data;
---

<BaseLayout title={title} description={description} image={image?.src}>
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <article class="lg:col-10 flex flex-wrap content-start">
          <!-- Title -->
          <h1 set:html={title} class="p-2 col basis-full min-w-72" />
          <!-- Cover Photo -->
          {
            image && (
              <div class="col basis-2/3 p-2 min-w-72">
                <div class="glass rounded-lg intersect:animate-fadeDown opacity-0">
                  <Image
                    class="w-full rounded-lg"
                    src={image}
                    alt={imageAlt}
                    width={1920}
                    height={1080}
                    loading="eager"
                  />
                </div>
              </div>
            )
          }
          <!-- About -->
          <section class="col basis-1/3 p-2 min-w-72">
            <div class="glass rounded-lg p-2 h-full intersect:animate-fadeUp opacity-0">
              <!-- Author -->
              {
                author && (
                  <div class="m-4">
                    <a href={`/authors/${slugify(author.id)}`}>
                      <FaRegUserCircle className={"mr-2 -mt-1 inline-block"} />
                      {upperHumanize(author.id)}
                    </a>
                  </div>
                )
              }
              <!-- Topics -->
              {
                topics && (
                  <div class="m-4">
                    <GiOilRig className={"mr-2 -mt-1 inline-block"} />
                    {topics}
                  </div>
                )
              }
              <!-- Tools -->
              {
                tools && (
                  <div class="m-4">
                    <FaTools className={"mr-2 -mt-1 inline-block"} />
                    {tools}
                  </div>
                )
              }
              <!-- Tags -->
              {
                tags && (
                  <div class="m-4">
                    <FaTags className={"mr-2 -mt-1 inline-block"} />
                    {tags}
                  </div>
                )
              }
              <!-- Description -->
              {
                description && (
                  <div>
                    {author || topics || tools || tags ? <hr class="my-2" /> : null}
                    <div class="m-4">
                      <div set:html={markdownify(description)} />
                    </div>
                  </div>
                )
              }
            </div>
          </section>
          <!-- Context -->
          {
            context && (
              <section class="col basis-1/3 p-2 min-w-72">
                <div class="glass rounded-lg p-4 intersect:animate-fadeUp opacity-0">
                  <h2 set:html="Context" class="mb-2" />
                  <div class="row justify-center">
                    {context.list.map((it: string, index: number) => (
                      <div class="row my-1">
                        <div class="col-7" set:html={context.list[index]} />
                        <div class="col-5 text-right" set:html={context.qty[index]} />
                        <hr class="my-1" />
                      </div>
                    ))}
                  </div>
                </div>
              </section>
            )
          }
          <!-- Development -->
          {
            development && (
              <section class="col basis-full p-2 min-w-72">
                <div class="glass rounded-lg p-4 intersect:animate-fadeUp opacity-0">
                  <h2 set:html="Development" class="mb-2" />
                  <div class="row justify-center">
                    {development.map((it: string, index: number) => (
                      <div class="row my-1">
                        <div class="col">
                          {index + 1}. {it}
                        </div>
                        <hr class="my-1" />
                      </div>
                    ))}
                  </div>
                </div>
              </section>
            )
          }
          <!-- Application -->
          {
            application && (
              <section class="col basis-full p-2 min-w-72">
                <div class="glass rounded-lg p-4 intersect:animate-fadeUp opacity-0">
                  <h2 set:html="Application" class="mb-2" />
                  <div class="row justify-center">
                    {application.map((it: string, index: number) => (
                      <div class="row my-1">
                        <div class="col">{it}</div>
                        <hr class="my-1" />
                      </div>
                    ))}
                  </div>
                </div>
              </section>
            )
          }
          <!-- Summary -->
          {
            summary && (
              <section class="col basis-full p-2 min-w-72">
                <div class="glass rounded-lg p-4 intersect:animate-fadeUp opacity-0">
                  <h2 set:html="Summary" class="mb-2" />
                  <div class="row justify-center">
                    {summary.map((it: string, index: number) => (
                      <div class="row my-1">
                        <div class="col">{it}</div>
                        <hr class="my-1" />
                      </div>
                    ))}
                  </div>
                </div>
              </section>
            )
          }
          <!-- Resources -->
          {
            resources && (
              <section class="col basis-full p-2 min-w-72">
                <div class="glass rounded-lg p-4 intersect:animate-fadeUp opacity-0">
                  <h2 set:html="Resources" class="mb-2" />
                  <div class="row justify-center">
                    {resources.map((it: string, index: number) => (
                      <div class="row my-1">
                        <div class="col">{it}</div>
                        <hr class="my-1" />
                      </div>
                    ))}
                  </div>
                </div>
              </section>
            )
          }
        </article>
        <!-- Share -->
        <div class="flex col-10 p-2 items-center justify-center lg:justify-end px-6">
          <Share title={title} description={description} folder="tutorials" id={entry.id} />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
