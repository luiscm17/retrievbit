---
import BaseLayout from "@components/base/BaseLayout.astro";
import TutorialsCard from "@components/tutorials/Card.astro";
import Pagination from "@components/common/Pagination.astro";
import PageHeader from "@components/common/PageHeader.astro";
import type { TutorialsEntry } from "@/types";

interface Props {
  entryIndex: TutorialsEntry;
  entries: TutorialsEntry[];
  pageIndex: number;
  pageCount: number;
}

const { entryIndex, entries, pageIndex, pageCount }: Props = Astro.props;
---

<BaseLayout
  title={entryIndex.data.title}
  image={entryIndex.data.image?.src}
  description={entryIndex.data.description}
>
  <PageHeader title={entryIndex.data.title} />
  <section class="section m-2">
    <div class="container">
      <div class="row">
        {
          entries.map((entry) => (
            <div class="md:col-6 lg:col-4 h-min p-2">
              <TutorialsCard entry={entry} />
            </div>
          ))
        }
      </div>
      <Pagination collection="tutorials" pageIndex={pageIndex} pageCount={pageCount} />
    </div>
  </section>
</BaseLayout>
